{
  "$schema": "./node_modules/turbo/schema.json",
  "envMode": "loose",
  "tasks": {
    "start": {
      "persistent": true
    },
    "check-types": {
      "cache": false,
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "build:vite": {
      "dependsOn": ["check-types", "^check-types"],
      "cache": false
    },
    "build:electron": {
      "dependsOn": ["build:vite"]
    },
    "@conar/desktop#build": {
      "dependsOn": ["^check-types", "build:vite", "build:electron"]
    },
    "drizzle:migrate": {
      "cache": false
    },
    "drizzle:generate": {
      "cache": false
    },
    "test:unit": {
      "cache": false
    },
    "test:e2e": {
      "cache": false
    },
    "test:start": {
      "persistent": true
    }
  }
}
